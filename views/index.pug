extends ./layout/layout

block css
    link(rel="stylesheet",href="/css/index.css")

block contents
    include ./layout/tag

    .layui-container
        .layui-row.layui-col-space15
            //-文章列表
            .layui-col-md8
                ul.article-list
                    li index.html
                    li 这是pug渲染出来的首页
                    //- each info in artList
                        li
                            a.list-face
                                img(src=info.author.avatar,alt=info.author)
                            h2
                                a.layui-badge= info.tips
                                a.article-title.ellipsis(href=`/article/$(info._Id)`)= info.title
                            .list-info
                                a= info.author.username
                                span= info.created.toLocaleString()
                                span.list-replay
                                    i(title="评论")。layui-icon.layui-icon-file-b
                                    = info.commentNum
                                                                    
                //-下侧换页
                include ./layout/laypage.pug

            //-右侧公告
            include ./layout/right_tag

block scripts
    script(src="/js/index.js")
                